@{
    Layout = "_ColumnsOne";

    //title
    NopHtml.AddTitleParts(T("PageTitle.PageNotFound").Text);
    //page class
    NopHtml.AppendPageCssClassParts("html-not-found-page");
}
<div class="page not-found-page">
    <div class="page-body">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <img src="~/Themes/Storebox/Content/images/image-asset.jpeg" />
                </div>
                <div class="col-md-6">
                    <div class="not-found-text">
                        <h2>404</h2>
                        @await Component.InvokeAsync(typeof(TopicBlockViewComponent), new { systemName = "PageNotFound" })
                    </div>
                </div>
            </div>            
        </div>
    </div>
</div>
