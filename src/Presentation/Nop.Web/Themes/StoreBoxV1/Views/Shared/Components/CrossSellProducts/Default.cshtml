@model IList<ProductOverviewModel>
@{
    var supportRtl = await Html.ShouldUseRtlThemeAsync();
    var rtl = supportRtl ? "true" : "false";
}
@if (Model.Count > 0)
{
    <div class="product-grid cross-sells">
        <div class="title">
            <strong>@T("ShoppingCart.CrossSells")</strong>
        </div>
        <div class="item-grid owl-carousel" id="cross-prd">
            @foreach (var product in Model)
            {
                <div class="item-box">
                    @await Html.PartialAsync("_ProductBox", product)
                </div>
            }
        </div>
    </div>
    <script asp-location="Footer">
        $(document).ready(function () {
            $('#cross-prd').owlCarousel({
                loop: false,
                margin: 1,
                dots: false,
                nav: false,
                rtl: @rtl,
                responsive: {
                    0: {
                        items: 1,
                        autoWidth: true
                    },
                    991: {
                        items: 3,
                        autoWidth: true
                    },
                    1000: {
                        items: 4
                    },
                    1300: {
                        items: 5
                    },
                    1400: {
                        items: 6
                    }
                }
            })
        })
    </script>
}