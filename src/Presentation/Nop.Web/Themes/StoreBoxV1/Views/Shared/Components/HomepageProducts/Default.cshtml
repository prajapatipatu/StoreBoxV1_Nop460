@model IList<ProductOverviewModel>
@{
    var supportRtl = await Html.ShouldUseRtlThemeAsync();
    var rtl = supportRtl ? "true" : "false";
}
@if (Model.Count > 0)
{
    <div class="product-grid home-page-product-grid">
        <div class="title">
            <strong>@T("Homepage.Products")</strong>
        </div>
        <div class="item-grid owl-carousel" id="homepage-prd">
            @foreach (var item in Model)
            {
                <div class="item-box">
                    @await Html.PartialAsync("_ProductBox", item)
                </div>
            }
        </div>
    </div>

    <script asp-location="Footer">
        $(document).ready(function(){
            $('#homepage-prd').owlCarousel({
                loop:false,
                dots:false,
                margin:1,
                nav: false,
                rtl:@rtl,
                responsive: {
                    0: {
                        items: 1,
                        autoWidth: true
                    },
                    991: {
                        items: 3,
                        autoWidth: true
                    },
                    1000: {
                        items: 4
                    },
                    1300: {
                        items: 5
                    },
                    1400: {
                        items: 6
                    }
                }
            })
        })
    </script>
}